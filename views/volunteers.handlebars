<div class="col-12 flex-row align-center pad-lr">
            <div class="col-12 center pad-tb">
                <button id="hide-vinfo">Close Info</button>
            </div>
            <div id="form-v">
                <div class="form flex-row">
                    <p class=" col-12">
                        Create & Edit your information to send to orginizations you want to work with!
                    </p>
                    <h4>First Name</h4>
                    <textarea id="first-name" class="formbox-sl">{{volunteer.dataValues.first_name}}</textarea>
                    <h4>Last Name</h4>
                    <textarea id="last-name" class="formbox-sl">{{volunteer.dataValues.last_name}}</textarea>
                    <h4>Email</h4>
                    <textarea id="email" class="formbox-sl">{{volunteer.dataValues.email}}</textarea>
                    <h4>Phone</h4>
                    <textarea id="phone" class="formbox-sl">{{volunteer.dataValues.phone_number}}</textarea>
                    <h4>City</h4>
                    <textarea id="city" class="formbox-sl">{{volunteer.dataValues.city}}</textarea>
                    <h4>State (Please use initials)</h4>
                    <textarea id="state" class="formbox-sl">{{volunteer.dataValues.state}}</textarea>
                    <textarea id="divId" class="hide">{{volunteer.dataValues.id}}</textarea>
                    <!-- <h4>Prefered contact method</h4>
                    <textarea id="password" class="formbox-sl">
                        Email
                    </textarea> -->
                    <h4>Tell NFPs a little about yourself. What are your interests and skills?</h4>
                    <textarea id="info" class="formbox-lg">{{volunteer.dataValues.bio}}</textarea>
                    <div class="col-12 center pad-t">
                        <button id="save-rev-btn">Save</button>
                    </div>
                </div>
            </div>
        </div>    

         {{!--NFP list--}}
            <div class="bg-scrabble" style="width: 100%;">
                <h2 class="center pad-t">Join NFP Partners</h2>
                <div class=" justify-center">
                    <div class=" flex-column justify-space-around">
                        <ul style="list-style-type:none;">
                        {{#each nfp as |nfp|}}
                        <li>
                            {{> nfp-btn nfp }}
                        </li>
                        {{/each}}
                        </ul>   
                    </div> 
                </div>
            </div>
        