<div class="col-12 center pad">
    <h2>
        Add Non-For-Profit Information!
    </h2>
    <br>
    <button id="hide-vinfo">Close Info</button>
</div>
<div class="col-12 content">
    <div id="form-v" class="form flex-row">
        <form id="nfp-form" class="form flex-row" method="post">
            <h4>Name of NFP</h4>
            <input id="nfp-name" class="nfp-input formbox-sl"></input>
            <h4>Website</h4>
            <input id="nfp-website" class="nfp-input formbox-sl"></input>
            <h4>Cause</h4>
            <input id="nfp-cause" class="nfp-input formbox-sl"></input>
            <h4>Tags</h4>
            <input id="nfp-tags" class="nfp-input formbox-sl"></input>
            <h4>Description/Mission Statement</h4>
            <textarea id="nfp-mission-statement" class="nfp-input formbox-lg"></textarea>
            <h4>Size</h4>
            <input id="nfp-size" class="nfp-input formbox-sl"></input>
            <h4>Founding Year</h4>
            <input id="nfp-founding-year" class="nfp-input formbox-sl"></input>
            <h4>Reported Net Assets</h4>
            <input id="nfp-rna" class="nfp-input formbox-sl"></input>
            <h4>City</h4>
            <input id="nfp-city" class="nfp-input formbox-sl"></input>
            <h4>State Abbreviation</h4>
            <input id="nfp-state" class="nfp-input formbox-sl"></input>
            <h4>Zip Code</h4>
            <input id="nfp-zip" class="nfp-input formbox-sl"></input>
            <h4>Contact Info</h4>
            <input id="nfp-email" class="nfp-input formbox-sl" placeholder="Email Adress"></input>
            <input id="nfp-phone" class="nfp-input formbox-sl" placeholder="10-Digit Phone Number"></input>
            <h4>NFP Image</h4>
            <input id="nfp-image" class="nfp-input formbox-sl" placeholder="Enter Image URL"></input>
            <div class="col-12 pad-t">
                <div class="center">
                    <button id="nfp-save-btn">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="col-12">
    <div class="bg-scrabble hide ghost-in">
        <div class="center">
            <div class="col-12 center pad">
                <h2>
                    Click the following buttons to review interested parties!
                </h2>
            </div>
            <div class=" justify-center center">
                <div class="col-12 align-center">
                    {{#each nfps as |nfp|}}
                    {{> admin-search nfp}}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/javascript/adminApiCalls.js"></script>